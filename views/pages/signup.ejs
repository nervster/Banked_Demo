<!DOCTYPE html>
<html>

<head>
  <%- include("../partials/header.ejs") %>
</head>

<body>
  <%- include("../partials/navbar.ejs") %>

    <div class="container d-flex h-100 justify-content-center align-items-center" style="padding-top: 50px;">
        <div>
            <div>
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Signup</h5>
                        <form action="/signup" method="POST" class="validated-form" novalidate>
                            <% if ( auth == false) { %>
                                <div class="alert alert-warning" role="alert">
                                    Username and/or password is incorrect. Please try again.
                                  </div>
                            <%} %>
                            <div class="form-group">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <!-- <div class="valid-feedback">
                                    Looks good!
                                </div> -->
                            </div>
    
                            <div class="form-group>
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <!-- <div class="valid-feedback">
                                    Looks good!
                                </div> -->
                            </div>
                            <br>
                            <button class="btn btn-success btn-block">Signup</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>

</html>